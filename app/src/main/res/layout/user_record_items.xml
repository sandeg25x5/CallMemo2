<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="4dp"
        android:elevation="4dp"
        app:cardBackgroundColor="#FFA9B6FC"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/card_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:background="@color/colorPrimaryDark"
                app:titleMarginBottom="2dp"
                app:titleTextColor="#ffffff" />

            <TextView
                android:id="@+id/user_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_toolbar"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:text="Your Heading"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/user_phone_number_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name_txt"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:text="Your Phone Number"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/user_memo_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_phone_number_txt"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi molestie nisi dui.  "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/user_current_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:fontFamily="sans-serif"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:textColor="#ffffff"
                android:textStyle="bold"
                tools:text="UserCurrentTime" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>